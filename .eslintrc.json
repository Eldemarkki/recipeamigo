{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "react-i18next",
            "importNames": [
              "useTranslation"
            ],
            "message": "Import useTranslation from next-i18next instead."
          }
        ]
      }
    ]
  }
}
