{
  "name": "recipeamigo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:verify": "next lint --max-warnings 0",
    "prettier": "prettier --write src",
    "prettier:verify": "prettier --check src",
    "migrate:dev": "dotenv -e .env.local -- prisma migrate dev",
    "test:unit": "dotenv -e .env.local.test -- vitest unit.test.ts",
    "test:integration": "dotenv -e .env.local.test -- prisma migrate deploy && dotenv -e .env.local.test -- vitest run integration.test.ts",
    "test:start_database": "docker run --name recipeamigo-test-database -p 5433:5432 -e POSTGRES_USER=recipeamigo-test-user -e POSTGRES_PASSWORD=recipeamigo-test-password -e POSTGRES_DB=recipeamigo-test-database --rm postgres:15 &",
    "test:stop_database": "docker stop recipeamigo-test-database",
    "test": "npm run test:start_database && sleep 5 && dotenv -e .env.local.test -- prisma migrate deploy && dotenv -e .env.local.test -- vitest run && npm run test:stop_database",
    "test:unit:ci": "vitest unit.test.ts",
    "test:integration:ci": "dotenv -e .env.local.test -- prisma migrate deploy && dotenv -e .env.local.test -- vitest run integration.test.ts",
    "sumHours": "node ./sumHours.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.23.1",
    "@prisma/client": "^5.0.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@tiptap/extension-document": "^2.0.4",
    "@tiptap/extension-paragraph": "^2.0.4",
    "@tiptap/extension-text": "^2.0.4",
    "@tiptap/pm": "^2.0.4",
    "@tiptap/react": "^2.0.4",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.12",
    "filenamify": "^6.0.0",
    "framer-motion": "^10.14.0",
    "i18next": "^23.3.0",
    "minio": "^7.1.1",
    "next": "13.4.12",
    "next-i18next": "^14.0.0",
    "next-superjson-plugin": "^0.5.9",
    "pdfkit": "^0.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.2.3",
    "react-select": "^5.7.4",
    "sharp": "^0.32.4",
    "superjson": "^1.13.1",
    "typescript": "5.1.6",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "20.4.5",
    "@types/pdfkit": "^0.12.10",
    "@types/react": "18.2.17",
    "@types/react-dom": "18.2.7",
    "dotenv-cli": "^7.2.1",
    "eslint-config-prettier": "^8.9.0",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "sass": "^1.64.1",
    "vitest": "^0.33.0"
  }
}
